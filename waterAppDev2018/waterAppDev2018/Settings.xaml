<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="waterAppDev2018.Settings">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
            <Label Text="Settings"/>
            
            <StackLayout Orientation="Horizontal" >
                <Label Text="Weight" FontSize="Large"/>
                <Picker x:Name="WeightPicker" 
                    SelectedIndexChanged="WeightPicker_SelectedIndexChanged"/>
                
                
                
                <Label Text="Measurement System"/>
                <Picker x:Name="MeasurementPicker"
                        SelectedIndexChanged="MeasurementPicker_SelectedIndexChanged"/>
            </StackLayout>
            
            <Label Text="Wake/Sleep Time" FontSize="Medium"/>
            <Label Text="Wake Up Time"/>
            <TimePicker x:Name="wakeTime"
                            BindingContextChanged="WakeTime_BindingContextChanged"/>
            <Label Text="Sleep Time"/>
            <TimePicker x:Name="SleepTime"
                        BindingContextChanged="SleepTime_BindingContextChanged"/>

            <Button x:Name="SubmitButton" Text="Submit" TextColor="Green" Clicked="SubmitButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>